{
  "name": "psstore",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-s lint clean vite:build",
    "vite:build": "vite build --outDir=build",
    "preview": "vite preview",
    "clean": "rm -rf ./build",
    "lint": "run-s lint:eslint lint:tsc lint:ts lint:style lint:json",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:tsc": "tsc --project .",
    "lint:ts": "prettier --check --parser typescript --config package.json '**/*.{ts,tsx}'",
    "lint:json": "prettier --check '**/*.json'",
    "lint:style": "stylelint 'src/**/*.css'",
    "format": "run-s format:ts format:other",
    "format:ts": "prettier --parser typescript --config package.json '**/*.{ts,tsx}' --write",
    "format:other": "prettier '**/*.json' '**/*.css' --write",
    "docker:build": "yarn build && docker build -t docker.pkg.github.com/jonikanerva/dok8s/psstore:latest .",
    "docker:run": "docker run --rm -p 8080:80 docker.pkg.github.com/jonikanerva/dok8s/psstore:latest",
    "docker:push": "docker push docker.pkg.github.com/jonikanerva/dok8s/psstore:latest"
  },
  "engines": {
    "node": "22.18.0"
  },
  "dependencies": {
    "luxon": "^3.7.2",
    "query-string": "^9.3.0",
    "ramda": "^0.31.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "react-visibility-observer": "^1.0.8"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.4.0",
    "@types/ramda": "^0.31.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.8"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
